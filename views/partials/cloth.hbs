<div class="{{containerClothes}} product-item-wrapper">
    <a href="/viewone/{{this._id}}" class="product-item-wrapper">
        <div class="product-img"><img src="{{this.image}}" alt="cloth"></div>
        <p class="product-name">{{this.name}}</p>
        <p class="product-name">{{this.type}}</p>
        <p class="product-name">{{this.brand}}</p>
        <p class="product-price">${{this.price}}</p>
    </a>

    <div class="btn-container">
        <a href="/add/{{this._id}}" class="btn">Add to the day</a>
        <br>
        <a href="/edit/{{this._id}}" class="btn">
            Edit
        </a>
        <br>
        <a href="/delete/{{this._id}}" class="btn">
            Delete</a>
    </div>
    <style>
        .btn-container {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }



        .btn {
            border: 1px solid black;
            padding: 5px;
            text-align: center;
        }

        .btn:hover {
            color: white;
            background-color: #5DBDC4
        }
    </style>

</div>